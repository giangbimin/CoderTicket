<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <ul class="nav navbar-nav">
      <% if current_user %>
        Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' , class: "nav-link" %>
      <% else %>
        <li class="nav-item">
         <%= link_to 'Login', '/login', class: "nav-link" %> 
        </li>
        <li class="nav-item">
          <%= link_to 'Signup', '/signup', class: "nav-link"  %>
        </li>
      <% end %>
    </ul>
  </nav>  

<%= yield %>

</body>
</html>
